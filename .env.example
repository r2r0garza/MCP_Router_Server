# MCP Router Server Environment Example

# Core LLM provider selection
LLM_PROVIDER=openai
MODEL=gpt-4

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# LM Studio (local inference endpoint)
LMSTUDIO_URL=http://localhost:1234/v1/chat/completions
LMSTUDIO_API_KEY=your-lmstudio-api-key

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key

# Ollama
OLLAMA_MODEL=llama3

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure Foundry AI
AZURE_FOUNDY_API_KEY=your-azure-foundry-api-key
AZURE_FOUNDY_DEPLOYMENT=your-azure-foundry-deployment #i.e - in https://my-deployment.openai.azure.com, the deployement is my-deployment
VERSION=your-model-id #i.e - 2023-03-15-preview

# (Optional) API key for securing your MCP Router API
MCP_API_KEY=your-mcp-api-key

# (Optional) Storage
SQLITE_URL=sqlite:///./mcp_router.db
REDIS_URL=redis://localhost:6379/0
